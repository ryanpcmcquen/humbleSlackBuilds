PKGNAM=torchlight
SRCNAM=${SRCNAM:-Torchlight-2013-05-21.sh}
VERSION=${VERSION:-1.15_20130521}
BUILD=${BUILD:-1}
TAG=${TAG:-smsl}

if [ -z "$ARCH" ]; then
  [[ "$(uname -m)" = x86_64 ]] && ARCH=x86_64 || ARCH=i386
fi

if [ "$ARCH" = x86_64 ]; then
  ARCHALIAS=x86_64
  LIBDIRSUFFIX=64
else
  ARCHALIAS=x86
  LIBDIRSUFFIX=
fi

STATIC_LIBS="CEGUI fmod FreeImage Ogre SDL2 zziplib"

CWD=$(pwd)
TMP=${TMP:-/tmp}
PKG=$TMP/package-$PKGNAM

set -e

rm -rf $PKG
mkdir -p $TMP $PKG
cd $TMP
rm -rf $PKGNAM-$VERSION
mkdir $PKGNAM-$VERSION
cd $PKGNAM-$VERSION

sh $CWD/$SRCNAM --tar -xvf
bsdtar -xvf instarchive_all
bsdtar -xvf instarchive_linux_${ARCHALIAS}
bsdtar -xvf subarch deps
for i in $STATIC_LIBS; do
  bsdtar -xvf deps/$i/${i}_files_linux_${ARCHALIAS}
done
/bin/ls \
  | grep -Ev "\.zip|\.cfg|icons|lib$LIBDIRSUFFIX|music|README|Torchlight" \
  | xargs rm -rf

chown -R root:root .
chmod -R u+w,go+rX-w,a-s .

mkdir -p $PKG/opt/hib/$PKGNAM
cp -a \
  icons lib$LIBDIRSUFFIX music *.{zip,cfg,bin.$ARCHALIAS} $PKG/opt/hib/$PKGNAM/
install -D -T -m 644 Torchlight.png $PKG/usr/share/pixmaps/$PKGNAM.png

# Create a launcher under /usr/games
mkdir -p $PKG/usr/games
cat > $PKG/usr/games/$PKGNAM << EOF
#!/bin/sh

cd /opt/hib/$PKGNAM
exec ./Torchlight.bin.$ARCHALIAS "\$@"
EOF
chmod 755 $PKG/usr/games/$PKGNAM

# Create a menu entry
mkdir -p $PKG/usr/share/applications
cat > $PKG/usr/share/applications/$PKGNAM.desktop << EOF
[Desktop Entry]
Type=Application
Version=1.0
Name=Torchlight
Comment=A hack and slash action role-playing game.
Icon=/usr/share/pixmaps/$PKGNAM.png
Exec=/usr/games/$PKGNAM
Terminal=false
Categories=Game;
EOF

mkdir -p $PKG/usr/doc/$PKGNAM-$VERSION
cat README.linux > $PKG/usr/doc/$PKGNAM-$VERSION/README
cat $CWD/$PKGNAM.SlackBuild > $PKG/usr/doc/$PKGNAM-$VERSION/$PKGNAM.SlackBuild
cat $CWD/README > $PKG/usr/doc/$PKGNAM-$VERSION/README.slack

mkdir -p $PKG/install
cat $CWD/doinst.sh > $PKG/install/doinst.sh
cat $CWD/slack-desc > $PKG/install/slack-desc

cd $PKG
/sbin/makepkg -l y -c n $TMP/$PKGNAM-$VERSION-$ARCH-$BUILD$TAG.${PKGTYPE:-tgz}

# Clean up
cd $TMP
rm -rf $PKG $PKGNAM-$VERSION
